#cloud-config
write_files:
  - path: /etc/nginx/sites-available/${server_name}
    permissions: '0644'
    content: |
      server {
          listen 80;
          server_name ${server_name} www.${server_name};
          return 301 https://${server_name}$request_uri;
      }
      server {
          listen 443 ssl default_server;
          server_name ${server_name} www.${server_name};
          ssl_certificate /etc/letsencrypt/live/www.${server_name}/fullchain.pem;
          ssl_certificate_key /etc/letsencrypt/live/www.${server_name}/privkey.pem;
          include /etc/letsencrypt/options-ssl-nginx.conf;
          ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;
          location / {
              proxy_pass http://localhost:3000;
              proxy_http_version 1.1;
              proxy_set_header Upgrade $http_upgrade;
              proxy_set_header Connection 'upgrade';
              proxy_set_header Host $host;
              proxy_set_header X-Real-IP $remote_addr;
              proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
              proxy_set_header X-Forwarded-Proto $scheme;
              proxy_cache_bypass $http_upgrade;
          }
      }

runcmd:
  - ln -sf /etc/nginx/sites-available/${server_name} /etc/nginx/sites-enabled/${server_name}
  - systemctl reload nginx
